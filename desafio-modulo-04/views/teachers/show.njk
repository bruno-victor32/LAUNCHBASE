{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section 
    class="avatar" 
    style="background: url({{ instructor.avatar_url }}) no-repeat center center/ cover"></section>
    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Professor</div>
             <div>{{ teacher.name }}</div>
        </div>

         <div class="item">
            <div>Idade</div>
            <div>{{ teacher.birth}}</div>
        </div>

         <div class="item">
            <div>Grau de escolaridade</div>
            <div>{{ teacher.select }}</div>
        </div>

         <div class="item">
            <div>Tipo de Aula</div>
            <div>{{ teacher.classe }}</div>
        </div>

        <div class="item">
            <div>Acompanhamento</div>
            <div>
                {% for service in teacher.services %}
                <span>{{ service }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{ teacher.created_at }}</div>
        </div>

        <a href= "#" class= "button">Editar</a>

    </section>
</div>

{% endblock content %}